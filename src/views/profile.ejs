<%- include('header') %>
<article class="h-full">
  <form action="" method="post">
        <header class="pb-10">
            <h1 class="text-center">@<%= account.username %></h1>
        </header>
<% if (locals.user?.username == account.username) { %>
        <section>
<% if (locals.error) { %>
            <div class="msg-error"><%= error %></div>
<% } %>
            <form action="" method="post">
              <fieldset class="profile">
                  <legend>个人资料</legend>
                  <p><label for="username">昵称</label><input type="text"
                      name="nickname" id="username" class="text" value="<%=user.nickname||''%>" placeholder="用户名" maxlength="20"/>
                  </p>
                  <p><label for="passwd">新密码</label><input
                      type="password" name="passwd" id="passwd" class="text" value="<%=account.passwd||''%>" placeholder="不修改无需填写" />
                      <label for="oldpasswd" >旧密码</label><input
                      type="password" name="oldpasswd" id="oldpasswd" class="text" value="<%=account.oldpasswd||''%>" placeholder="不修改无需填写" /></p>
                  <p class="text-right"><input type="submit" value="修改" class="submit-btn" /> <button class="submit-btn !bg-red-600" id="logout">退出</button></p>
              </fieldset>
            </form>
        </section>
        <header class="flex space-x-2 items-center justify-center mt-10">
            <h3>
              <a <%-locals.query.type === 'draft' && `href="/u/${account.username}"` || '' -%>>我的故事</a>
            </h3>
            <span>/</span>
            <h3>
              <a <%-locals.query.type !== 'draft' && 'href="?type=draft"' || '' -%>>我的草稿</a>
            </h3>
        </header>
<% } else { %>
        <section>
            <p>
                <span class="user-info"><b>昵称：</b> <%=account.nickname%></span>
                <span class="user-info"><b>上次登录：</b> <script>document.write(new Date(<%=Number(user.lastLogin)-%>).toLocaleString())</script></span>
            </p>
        </section>
        <header class="mt-10">
            <h3 class="text-center">TA的故事</h3>
        </header>
<% } %>
        <section class="my-3">
          <ol class="list-decimal space-y-2">
            <% stories.forEach(function(story) { %>
              <li>
                <section class="flex justify-between items-bottom">
                  <a class="truncate" href="<%=query.type === 'draft' ? '/d' : ''-%>/<%=story.id-%>"><%= story.name %></a>
                  <span class="text-gray-500 dark:text-light-900 text-sm truncate" title="<%= story.description %>">
                    <%= story.description %>
                  </span>
                </section>
              </li>
            <% }); %>
          </ol>
        <% if (stories.length === 0) { %>
          <p>还没有发表的故事.</p>
        <% } %>
        </section>
</article>
<%- include('footer') %>
