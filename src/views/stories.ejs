<%- include('header') %>

<article>
  <section>
    <ol class="list-decimal">
      <% stories.forEach(function(story) { %>
        <li>
          <a href="/<%=story.id-%>"><%= story.name %></a>
          <span class="text-gray-500 dark:text-light-900"><%= story.description %></span>
        </li>
      <% }); %>
    </ol>
    <% if (stories.length === 0) { %>
      <p>还没有故事.</p>
    <% } %>
  </section>
</article>
<%- include('footer') %>