    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.2.2",
    "session-file-store": "^1.5.0",
    "svg-captcha": "^1.4.0",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "@types/session-file-store": "^1.2.5",
    "copyfiles": "^2.4.1",
